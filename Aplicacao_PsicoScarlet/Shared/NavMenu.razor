            </NavLink>
        </div>

         <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Atendimentos">
                <span class="oi oi-folder" aria-hidden="true"></span> Atendimentos
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Financeiro">
                <span class="oi oi-dollar" aria-hidden="true"></span> Financeiro
            </NavLink>
        </div>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Agenda">
                <span class="oi oi-calendar" aria-hidden="true"></span> Agenda
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
